<BorderPane prefHeight="407.0" prefWidth="612.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.gui2.PrimaryController">
   <center>
      <VBox alignment="CENTER" prefHeight="511.0" prefWidth="940.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER" prefHeight="24.0" prefWidth="292.0">
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <Label alignment="CENTER" prefHeight="34.0" prefWidth="979.0" text="Welcome to Game Time " textAlignment="CENTER" />
